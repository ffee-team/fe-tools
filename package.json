{
  "name": "fe-tools",
  "private": true,
  "scripts": {
    "test": "jest",
    "compile": "node scripts/compile.js",
    "dev": "npm run clean; npm run compile -- packages dev", 
    "link": "node scripts/link.js packages", 
    "build": "npm run clean; npm run compile -- packages prod",
    "setup": "lerna bootstrap --npm-client pnpm",
    "clean": "rm -rf ./packages/*/lib",
    "lint": "eslint ./packages/*/src --ext .js,.jsx,.ts,.tsx --fix",
    "pub": "npm run lint; npm run build; node scripts/pub.js packages"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^14.17.29",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-plugin-import": "^2.25.2",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "lint-staged": "^9.5.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "chokidar": "^3.5.2",
    "fs-extra": "^9.1.0"
  },
  "engines": {
    "node": ">=14"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "collectCoverage": true,
    "testRegex": "/packages/(.+)/__tests__/(.+)\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testPathIgnorePatterns": [
      "/(node_modules|lib|coverage|types)/"
    ]
  }
}